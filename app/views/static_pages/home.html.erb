<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">  
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section class="microposts_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-6">
      <h3> Micropost feed </h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Twitter Sample App</h1>

    <h2>
      This is the home page for the
      <a href="https://www.railstutorial.org/">Twitter</a>
      sample application.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("twitter-logo.svg", alt: "Twitter logo", width: "75"),
                        "http://ninjaflex.com/" %>
<% end %>